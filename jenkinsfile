pipeline {
  agent any

  stages {
    // Declarative pipelines auto-checkout SCM; no separate "Checkout" stage needed.

    stage('Install & Test') {
      steps {
        bat '''
          py -3 --version
          py -3 -m pip install --upgrade pip
          if exist requirements.txt (
            py -3 -m pip install -r requirements.txt
          ) else (
            py -3 -m pip install pytest
          )
          py -3 -m pytest -q --junitxml=report.xml
        '''
      }
    }
  }

  post {
    always {
      // Publish test results (won't fail the build if file is missing)
      junit testResults: 'report.xml', allowEmptyResults: true
    }
  }
}
