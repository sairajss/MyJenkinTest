pipeline {
  agent any
  tools { python 'Python311' }
  stages {
    stage('Install dependencies') {
      steps {
        bat '''
          python -m pip install --upgrade pip
          python -m pip install -r requirements.txt || python -m pip install pytest
        '''
      }
    }
    stage('Run Tests') {
      steps {
        bat 'python -m pytest -q --junitxml=report.xml'
      }
    }
  }
  post { always { junit 'report.xml' } }
}

